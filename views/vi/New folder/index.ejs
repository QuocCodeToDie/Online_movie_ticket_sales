    <div class="select-film" lang="vi">
        <h1 align="center">Đặt vé online</h1>

        <form method="POST" align="center">
            <select name="phim" id="movies" onchange="checkSelect()">
            <option value="none" class="non-display">Chọn phim</option>
            <option value="crawl">Cá sấu tử thần</option>
            <option value="unhinged">Kẻ cuồng sát</option>
            <option value="scooby-doo">Cuộc phiêu lưu của Scooby-doo</option>
            <option value="latte-and-the-magic-water-stone">Nhím sóc và viên đá thần kỳ</option>
            <option value="peninsula">Bán đảo Peninsula</option>
            <option value="kingsman">Kingmans: Khởi nguồn</option>
            <option value="pinocchio">Cậu bé người gỗ Pinocchio (2019)</option>
            <option value="rom">Ròm</option>
            
          </select>



            <select name="theatres" id="theatres" onchange="checkSelect()">
            <option value="none" class="non-display">Chọn rạp</option>
            <option value="rap1" class="display-theatre">Rạp 1</option>
            <option value="rap2" class="display-theatre">Rạp 2</option>
            <option value="rap3" class="display-theatre">Rạp 3</option>
            <option value="rap4" class="display-theatre">Rạp 4</option>
            <option value="audi" class="display-notice" disabled>Vui lòng chọn phim</option>
          </select>
            <br>

            <select name="date" id="date" onchange="checkSelect()">
            <option value="none" class="non-display">Chọn ngày</option>
            <option value="<%=today%>" class="display-date"><%=today%>/2020</option>
            <option value="<%=mai%>" class="display-date"><%=mai%>/2020</option>
            <option value="audi" class="display-notice" disabled>Vui lòng chọn phim và rạp</option>
          </select>

            <select name="screenings" id="screenings" onchange="checkSelect()">
            <option value="none" class="non-display">Chọn suất chiếu</option>
            <option value="9:10" class="display-sceening">9:10</option>
            <option value="14:10" class="display-sceening">14:10</option>
            <option value="18:10" class="display-sceening">18:10</option>
            <option value="22:10" class="display-sceening">22:10</option>
          </select>

            <br>
            <button type="submit" value="Ok">Ok
        </form>
